<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppKW.Views.StartPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Button VerticalOptions="Center" Text="Iniciar sesión" Clicked="Login_Button_Clicked" />
            <Button VerticalOptions="Center" Text="Registrarse" Clicked="Register_Button_Clicked" BackgroundColor="#E74C3C"/>
            <Button VerticalOptions="Center" Text="Invitado" Clicked="Guest_Button_Clicked" BackgroundColor="#95A5A6"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    